<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bill"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/_wallpaper">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bill"
        android:fontFamily="casual"
        android:textSize="50sp"
        android:textColor="#9C27B0"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"/>
    <EditText android:id="@+id/billName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Bill Name"
        android:fontFamily="casual"
        android:textSize="20sp"
        android:textColor="#9C27B0"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"/>
    <EditText android:id="@+id/costText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Total Cost"
        android:fontFamily="casual"
        android:textSize="20sp"
        android:textColor="#9C27B0"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:inputType="numberDecimal"/>
    <Button android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Bill"
        android:fontFamily="casual"
        android:textSize="20sp"
        android:textColor="#9C27B0"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        app:backgroundTint="@color/material_on_primary_disabled"
        android:textAllCaps="false"/>

</LinearLayout>